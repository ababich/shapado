- new_comment = find_and_preserve("<pre style='font-size:14px'>"+ shapado_auto_link(markdown(@comment.body, :group => @group))+"</pre>")
- question = link_to h(@question.title), url_for(:host => @group.domain, :controller => "questions", :action => "show", :id => @question.slug)
%p
  = t("notifier.global.hi", :user => h(@user.login))
  %br
  %br
  =raw t("notifier.new_comment.message", :user => h(@comment.user.login), :new_comment => new_comment, :question => question)
